{
  "name": "@firstandthird/bounce",
  "version": "2.0.0",
  "description": "Show elements on mouse out to increase conversion rates",
  "main": "index.js",
  "module": "dist/bounce.esm.js",
  "keywords": [
    "bounce",
    "conversion"
  ],
  "scripts": {
    "start": "scriptkit",
    "build": "scriptkit build",
    "dev": "scriptkit dev",
    "pretest": "scriptkit build",
    "test": "cat test/bounce.test.dist.js | tape-run --static . --browser phantomjs --render tap-spec",
    "prepublishOnly": "scriptkit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/firstandthird/bounce.git"
  },
  "author": "First+Third",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/firstandthird/bounce/issues"
  },
  "homepage": "https://github.com/firstandthird/bounce#readme",
  "devDependencies": {
    "eslint-config-firstandthird": "^4.3.0",
    "eslint-plugin-import": "^2.16.0",
    "phantomjs-prebuilt": "^2.1.16",
    "scriptkit": "^2.0.3",
    "tap-spec": "^5.0.0",
    "tape-rollup": "^4.6.4",
    "tape-run": "^5.0.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "extends": "firstandthird"
  },
  "scriptkit": {
    "serve": {
      "enabled": true
    },
    "files": {
      "dist/bounce.js": "index.js",
      "test/bounce.test.dist.js": "test/bounce.test.js"
    },
    "scripts": {
      "babel": {
        "exclude": [
          "node_modules/tape-rollup/*"
        ]
      }
    }
  },
  "dependencies": {
    "@firstandthird/cookie-monster": "^2.0.0",
    "aug": "^3.0.1",
    "domassist": "^2.0.2"
  }
}
